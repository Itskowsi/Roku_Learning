<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "RowListItem" extends = "Group" >
 
  <interface > 
    <field id = "itemContent" type = "node" onChange = "showcontent"/>
    <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
    <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
  </interface>
 
  <script type = "text/brightscript" uri="pkg:/components/rowlistitem.brs"></script>

  <children >

    <Poster 
      id = "itemPoster" 
      translation = "[ 10, 10 ]" 
      width = "200" 
      height = "400" 
      scaleRotateCenter = "[ 144.0, 256.0 ]" >

      <Rectangle 
        id = "itemMask" 
        color = "0x000000FF" 
        opacity = "0.75" 
        width = "512" 
        height = "288" 
        scaleRotateCenter = "[ 256.0, 144.0 ]"/>

    </Poster>

    <Label 
      id = "itemLabel" 
      translation = "[ 20, 425 ]" 
      horizAlign = "left" 
      width = "492" 
      opacity = "0.0"/>

  </children>
</component>
